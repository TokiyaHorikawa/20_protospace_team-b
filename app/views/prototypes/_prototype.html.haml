.col-sm-4.col-md-3.proto-content
  .dropdown
    %ul
      %li
        = link_to '編集', edit_prototype_path(prototype.id), method: :get
      %li
        = link_to '削除', prototype_path(prototype.id), method: :delete
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date
