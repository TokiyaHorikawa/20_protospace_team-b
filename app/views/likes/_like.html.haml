- if user_signed_in?
  - if prototype.like_user(current_user.id)
    = button_to prototype_like_path(prototype_id: prototype.id, id: @like.id), method: :delete, id: "like-button", remote: true do
      = image_tag("icon_red_heart.svg")
      いいね
      %span
        = prototype.likes_count
  - else
    = button_to prototype_likes_path(prototype.id), id: "like-button", remote: true do
      = image_tag("icon_heart.svg")
      いいね
      %span
        = prototype.likes_count
- else
  = image_tag("icon_red_heart.svg")
  %span
    = prototype.likes_count
